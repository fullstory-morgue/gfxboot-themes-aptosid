+%
+% ( ) => ( )
+%
+/panel.timezone {
+  % "keymap" help.setcontext
+
+  timezone.setdefault
+
+  window.xmenu
+  dup .xmenu xmenu.timezone put
+  dup .xmenu.update /timezone.update put
+  dup window.init
+      window.show
+} def
+
