+%
+% ( ) ==> ( )
+%
+/timezone.update {
+  /xmenu xmenu.timezone def
+
+  timezones xmenu .xm_current get get .tz.id get settimezone
+
+  /window.action actRedrawPanel def
+} def
+
+
+% - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
