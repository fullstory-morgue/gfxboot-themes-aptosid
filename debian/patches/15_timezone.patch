+% - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
+% Build menu list.
+%
+% ( ) ==> ( )
+%
+/timezone.init {
+  /xmenu.timezone .xm_size array def
+
+  /xmenu xmenu.timezone def
+
